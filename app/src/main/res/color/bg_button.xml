<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Обычное состояние -->
    <item>
        <layer-list>
            <!-- Основной фон с закруглениями и обводкой (ВСЕ стороны) -->
            <item>
                <shape android:shape="rectangle">
                    <corners
                        android:topLeftRadius="45dp"
                        android:topRightRadius="45dp"/>
                    <solid android:color="@color/bgMenu"/>
                    <stroke
                        android:width="1dp"
                        android:color="#E2CAD8"/>
                </shape>
            </item>

            <!-- Перекрываем НИЖНЮЮ ЧАСТЬ (убираем нижнюю границу) -->
            <item android:top="47dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/bgMenu"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>