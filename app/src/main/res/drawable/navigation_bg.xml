<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 1. Основной фон с закруглениями и обводкой (ВСЕ стороны) -->
    <item>
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="37dp"
                android:topRightRadius="37dp"/>
            <solid android:color="@color/bgMenu"/>
            <stroke
                android:width="1dp"
                android:color="@color/icon"/>
        </shape>
    </item>

    <!-- 2. Перекрываем НИЖНЮЮ ЧАСТЬ (где не нужна граница) -->
    <item android:top="37dp">  <!-- Отступ сверху = радиусу закругления -->
        <shape android:shape="rectangle">
            <solid android:color="@color/bgMenu"/>  <!-- Цвет должен совпадать с фоном -->
        </shape>
    </item>
</layer-list>
